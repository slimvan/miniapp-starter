<view class="container">
    <common-swiper-view list="{{slide_list}}"
                        height="500rpx">
    </common-swiper-view>
    <view class="list-view">
        <block wx:for="{{10}}" wx:key="index">
            <view class="item-view common-shadow">
                <image src="/packageCustomer/images/ic_member_card_bg.png" mode="aspectFill"
                       class="item-image-bg"></image>
                <view class="horizontal-view">
                    <view class="item-title text-line-1">一点万象白金卡</view>
                    <view class="item-times">礼遇剩余
                        <span class="item-times-number">99</span>
                        次
                    </view>
                </view>
                <view class="item-subtitle">每个会员周期可获得
                    <span class="text-color-active">12</span>
                    次
                </view>
                <view class="horizontal-view">
                    <view class="item-expired-text">礼遇到期日：
                        <span class="item-expired-date">2025-12-31</span>
                    </view>
                    <view class="item-button" bindtap="onItemButtonClick">立即使用</view>
                </view>
            </view>
        </block>
    </view>
    <view class="bottom-view">
        <view class="common-button" bindtap="onButtonClick">我的订单</view>
    </view>
</view>

